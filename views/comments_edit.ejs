<%- include("partials/header") %>

<div class="container">
	<h1>Add new Comment</h1>
	<form action ="/placement/<%= rest._id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
		<div class="form-group">
			<label for="text">Comment Text</label>
			<textarea class="form-control" name="text" id="text" rows="8" cols="80" placeholder="Comment text here ......" required><%= comment.text %></textarea> 
		</div>
		<button type="submit" class="btn btn-primary">
			Submit Comment
		</button>
	</form>
</div>
<%- include("partials/footer") %>